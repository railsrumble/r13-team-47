.nav-main
  %nav
    %ul
      - if current_user
        - if current_user.teams.first
          %li= link_to 'You', team_url(current_user.teams.first), class: 'hard-shadow'
          %li= link_to 'Manage', edit_team_url(current_user.teams.first), class: 'hard-shadow'
        - else
          %li= link_to 'Add new team', new_team_url, class: 'hard-shadow'
      - else
        %li= link_to 'Home', root_url, class: 'hard-shadow'
      %li= link_to 'Leaderboard', teams_url, class: 'hard-shadow'
      %li= link_to 'About', '/about/', class: 'hard-shadow'
      %li
        - if current_user
          = link_to 'Logout', logout_url, class: 'hard-shadow'
        - else
          = link_to "Sign in with Github", "/auth/github", class: 'hard-shadow'
