$text-font-family: 'GeoSansLight';

/* Generated by Font Squirrel (http://www.fontsquirrel.com) on October 19, 2013 */
@font-face {
    font-family: $text-font-family;
    src: url("<%= asset_path('geosanslight-oblique.eot') %>");
    src: url("<%= asset_path('geosanslight-oblique.eot?#iefix') %>") format('embedded-opentype'),
         url("<%= asset_path('geosanslight-oblique.woff') %>") format('woff'),
         url("<%= asset_path('geosanslight-oblique.ttf') %>") format('truetype'),
         url("<%= asset_path('geosanslight-oblique.svg#geosanslightmedium_italic') %>") format('svg');
    font-weight: normal;
    font-style: italic;
}

@font-face {
    font-family: $text-font-family;
    src: url("<%= asset_path('geosanslight.eot') %>");
    src: url("<%= asset_path('geosanslight.eot?#iefix') %>") format('embedded-opentype'),
         url("<%= asset_path('geosanslight.woff') %>") format('woff'),
         url("<%= asset_path('geosanslight.ttf') %>") format('truetype'),
         url("<%= asset_path('geosanslight.svg#geosanslightregular') %>") format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
  font-family: $text-font-family;
}

h1{
    font-size: 3em;
    margin: 0.5em 0.2em;
    text-align: center;
    font-weight: normal;
    &.title{
        text-align: right;
    }
}

h2{
    font-size: 2em;
    margin: 0.3em 0;
    font-weight: normal;
}

h3{
    font-size: 1.5em;
    margin: 0.1em 0;
    font-weight: normal;
}
