body {
  font-family: $text-font-family;
}

#{$all-text-inputs},
textarea {
  font-family: $text-font-family;
}

h1{
    font-size: 3em;
    margin: 0 0 0 0.5em;
    text-align: center;
    font-weight: normal;
    &.title{
        text-align: right;
    }
}

h2{
    font-size: 2em;
    margin: 0.3em 0;
    font-weight: normal;
}

h3{
    font-size: 1.5em;
    margin: 0.1em 0;
    font-weight: normal;
}

h4{
  font-size: 1.2em;
  margin: 0.1em 0;
  font-weight: bold;
}

.text-block {
  font-size: 1.5em;
}

.nav-session {
  font-size: 1.5em;
}
